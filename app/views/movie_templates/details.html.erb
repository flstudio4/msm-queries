<h1>
  Movie #<%= @movie_list.at(0).id %> details
</h1>

<a href="/movies">
  Go back
</a>

<hr>

<dl>
  <dt>
    Title
  </dt>
  <dd>
    <%= @movie_list.at(0).title%>
  </dd>

  <dt>
    Year
  </dt>
  <dd>
    <%= @movie_list.at(0).year%>
  </dd>

  <dt>
    Duration
  </dt>
  <dd>
    <%= @movie_list.at(0).duration%>
  </dd>

  <dt>
    Description
  </dt>
  <dd>
    <%= @movie_list.at(0).description%>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @movie_list.at(0).image%>" style="width:250px;">
  </dd>

  <dt>
    Director
  </dt>
  <dd>
    <%= @director_name %>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= @movie_list.at(0).created_at%>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @movie_list.at(0).updated_at%>
  </dd>
</dl>

<hr>
