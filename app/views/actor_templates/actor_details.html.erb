<h1>
  Actor #<%= @actor_id %> details
</h1>

<a href="/actors">
  Go back
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @actor.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @actor.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @actor.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @actor.image %>" style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= @actor.created_at %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @actor.updated_at %>
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
      Character name
    </th>

    <th>
    </th>
  </tr>

  <% @character.each do |char| %>

  <tr>
      <td>
        <%movie_id = char.movie_id %>
        <%= Movie.where(:id => movie_id)[0].title %>
      </td>

      <td>
        <%= Movie.where(:id => movie_id)[0].year %>
      </td>

      <td>
        <% director_id = Movie.where(:id => movie_id)[0].director_id %>
        <%= Director.where(:id => director_id)[0].name %>
      </td>

      <td>
        <%= char.name %>
      </td>

      <td>
        <a href="/movies/<%= Movie.where(:id => movie_id)[0].id %>">
          Show details
        </a>
      </td>
    </tr>
    <% end %>

    
